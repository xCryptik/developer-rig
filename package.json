{
  "name": "dev-rig",
  "engines": {
    "node": "<=9.11.1"
  },
  "version": "0.1.1",
  "private": true,
  "repository": "github:twitchdev/developer-rig",
  "dependencies": {
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.0.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/react": "^16.3.16",
    "@types/react-redux": "^6.0.2",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.6",
    "command-line-args": "^5.0.2",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.0.1",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "http-server": "^0.11.1",
    "jest": "20.0.4",
    "jsonwebtoken": "^8.2.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "^5.0.0",
    "react-dom": "^16.2.0",
    "react-redux": "5.0.7",
    "react-scripts": "^1.1.4",
    "redux": "^4.0.0",
    "redux-thunk": "2.2.0",
    "shelljs": "^0.8.1",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "^22.4.6",
    "ts-loader": "3.5.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "0.6.2",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3",
    "ws": "^5.2.0"
  },
  "resolutions": {
    "eslint-scope": "3.7.1"
  },
  "scripts": {
    "create-manifest": "node scripts/create-manifest.js",
    "start": "cross-env HOST=localhost.rig.twitch.tv HTTPS=true node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "extension-init": "node ./scripts/extension-init.js",
    "host": "node ./scripts/host.js"
  },
  "devDependencies": {
    "@types/eventemitter2": "^4.1.0",
    "@types/react-dom": "^16.0.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.4.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx,mjs}",
      "!src/**/index.{js,ts,tsx}",
      "!src/**/container.{js,ts}",
      "!src/tests/**",
      "!src/core/models/**",
      "!src/types/**"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/src/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,ts,tsx,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,ts,tsx,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "ts",
      "tsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false,
        "tarballDir": "build"
      },
      {
        "path": "@semantic-release/github",
        "assets": "build/*.tgz"
      }
    ]
  }
}
